
<div class="container text-center">

    <div class="row">
      <div class="col-md-3">
        </div>
          <div class="col-md-6">
              <div class="thumbnail">
                    <img src="http://images.firstwefeast.com/complex/image/upload/zdcmrii8wggtok6xzpjc.gif" alt="Homer" style="width:50%">
                      <div class="input-div">
                  <h2>Create a new burger</h2>
                  <form class='create-form'>
                    <div class="form-group">
                        <label for="text">Create new burger</label>
                        <input type="text" class="form-control" id="burger-name" placeholder="New Burger" name="burger_name">
                    </div>
                    <button type="submit" class="btn btn-default">Create</button>
                  </form>
              </div>
              </div>
          </div>
        <div class="col-md-3">
       </div>
    </div>

  <div class="row">
    <div class="col-md-6">
      <div class="thumbnail">
          <div class="eat-burger">
            {{#each burgers}}
             {{#unless devoured}}
             <p>{{burger_name}}</p>
             <img src="https://78.media.tumblr.com/fbf9bfee67214cc4ee870383679a3ea4/tumblr_mn9d32NgKb1rv977do1_400.gif" alt="Burger" style="width:20%"><br>
             {{!-- <p>{{burger_name}}</p><br> --}}
              <button type="button" id="devour-me"  class="btn btn-primary burger-eat" data-newdevoured="true" data-id="{{id}}">Devour me!</button><hr>
            {{/unless}}
            {{/each}}
          </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="thumbnail">
         <div class="make-burger">
            {{#each burgers}} 
            {{#if devoured}}
            <p>{{burger_name}}</p> 
             <img src="https://media.giphy.com/media/AAfpHO80onDYk/giphy.gif" alt="eatingBurger" style="width:20%"> <br>
            {{!-- <p>{{burger_name}}</p><br>  --}}
            <button type="button" data-id="{{id}}" id="make-burger" class="btn btn-primary burger-eat" data-newdevoured="false">Save this burger!</button><hr>
            {{/if}}
            {{/each}} 
          </div>
      </div>
    </div>
  </div>
</div>
